{% extends 'layout.html.twig' %}

{% block body %}

    <strong>

        <div class="p-4 p-md-5 mb-4 text-white rounded bg-dark">
            <div class="col-md-6 px-0">
                <h1 class="display-4 fst-italic">
                    {{ title|trans }}
                </h1>
                <p class="lead my-3">Multiple lines of text that form the lede, informing new readers quickly and efficiently about what’s most interesting in this post’s contents.</p>
                <p class="lead mb-0"><a href="#" class="text-white fw-bold">{{ 'Continue reading...'|trans({}, 'post') }}</a></p>
            </div>
        </div>

        <div class="row g-5">
            <div class="col-md-8">

                {% for post in posts %}
                <article class="blog-post">
                    <h2 class="blog-post-title">{{ post.getName()|trans({}, 'post') }}</h2>
                    <p class="blog-post-meta">{{ post.getPublishedAt()|date("Y-m-d") }} by
                        <a href="#">{{ post.getPublishedBy() }}, </a>
                        <a href="{{ path('post_show', { post: post.getId() }) }}">{{ 'Show'|trans({}, 'post') }}</a>
                    </p>
                    <p>{{ post.getDescription()|trans({}, 'post') }}</p>
                    <form action="{{ path('post_export', { post: post.getId() }) }}" method="post">
                        <button name="download_in_format" value="txt" type="submit" class="btn btn-primary">{{ 'Download in'|trans({}, 'post') }} TXT</button>
                        <button name="download_in_format" value="html" type="submit" class="btn btn-primary">{{ 'Download in'|trans({}, 'post') }} HTML</button>
                    </form>
                </article>
                {% endfor %}

                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link" href="#">{{ 'Previous'|trans({}, 'messages') }}</a></li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">{{ 'Next'|trans({}, 'messages') }}</a></li>
                    </ul>
                </nav>

            </div>

            <div class="col-md-4">
                <div class="position-sticky" style="top: 2rem;">
                    <div class="p-4 mb-3 bg-light rounded">
                        <h4 class="fst-italic">{{ 'About'|trans({}, 'messages') }}</h4>
                        <p class="mb-0">{{ 'Customize this section to tell your visitors a little bit about your publication, writers, content, or something else entirely. Totally up to you.'|trans({}, 'messages') }}</p>
                    </div>

                    <div class="p-4">
                        <h4 class="fst-italic">{{ 'Archives'|trans({}, 'messages') }}</h4>
                        <ol class="list-unstyled mb-0">
                            <li><a href="#">{{ 'January'|trans({}, 'messages') }} 2020</a></li>
                            <li><a href="#">{{ 'February'|trans({}, 'messages') }} 2020</a></li>
                            <li><a href="#">{{ 'March'|trans({}, 'messages') }} 2020</a></li>
                            <li><a href="#">{{ 'April'|trans({}, 'messages') }} 2020</a></li>
                            <li><a href="#">{{ 'May'|trans({}, 'messages') }} 2020</a></li>
                            <li><a href="#">{{ 'June'|trans({}, 'messages') }}r 2020</a></li>
                            <li><a href="#">{{ 'July'|trans({}, 'messages') }}r 2020</a></li>
                            <li><a href="#">{{ 'August'|trans({}, 'messages') }} 2020</a></li>
                            <li><a href="#">{{ 'September'|trans({}, 'messages') }} 2020</a></li>
                            <li><a href="#">{{ 'October'|trans({}, 'messages') }} 2020</a></li>
                            <li><a href="#">{{ 'November'|trans({}, 'messages') }} 2020</a></li>
                            <li><a href="#">{{ 'December'|trans({}, 'messages') }} 2020</a></li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>

    </strong>
{% endblock %}
